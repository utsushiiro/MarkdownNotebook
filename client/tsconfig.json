{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "es2015",
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop" :true,
    "lib": [
      "es2018",
      "dom"
    ],
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@api": ["src/api"],
      "@api/*": ["src/api/*"],
      "@config": ["src/config"],
      "@state/*": ["src/state/*"],
      "@test-utils": ["src/test-utils"],
      "@utils/*": ["src/utils/*"],
      "@components/*": ["src/views/components/*"],
      "@containers/*": ["src/views/containers/*"],
      "@pages/*": ["src/views/pages/*"]
    }
  }
}
