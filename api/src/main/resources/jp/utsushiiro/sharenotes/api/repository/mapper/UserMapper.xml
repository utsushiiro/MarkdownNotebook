<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jp.utsushiiro.sharenotes.api.repository.mapper.UserMapper">
    <resultMap id="User" type="User">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="password" property="password" />
        <result column="role" property="userRole" typeHandler="org.apache.ibatis.type.EnumOrdinalTypeHandler" />
        <result column="updated_at" property="updatedAt" />
        <result column="created_at" property="createdAt" />
    </resultMap>

    <select id="findOne" resultMap="User">
        select * from users where id = #{id}
    </select>

    <select id="findOneByUsername" resultMap="User">
        select * from users where name = #{name}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into users (name, password, role)
        values (#{name}, #{password}, #{userRole.ordinal})
    </insert>

    <update id="update">
        update users
        <set>
            <if test="name != null">name=#{name},</if>
            <if test="password != null">password=#{password},</if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
        delete from users
        where id = #{id}
    </delete>
</mapper>
